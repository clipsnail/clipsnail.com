extends layout

block head
  style
    .clip {
      width: 220px;
      margin: 10px;
      float: left;
      box-shadow: 1px 1px 5px 1px rgba(0,0,0,.25);
    }

    .clipframe {
      border: none;
      width: 200px;
      height: 150px;
      margin: 10px;
    }

    .clipdescr {
      width: 200px;
      margin: 0 10px 10px;
    }
block content
  each clip in clips
    div.clip
      iframe(sandbox, srcdoc=clip.html).clipframe
      p.clipdescr= clip.desc
